package com.example.calcer;

import androidx.appcompat.app.AppCompatActivity;
import android.os.Bundle;
import android.widget.Button;
import android.widget.EditText;

public class MainActivity extends AppCompatActivity {

    EditText ET_Result;
    Button b0, b1, b2, b3, b4, b5, b6, b7, b8, b9;
    Button bplus, bminus, bmul, bdiv, beql, bclr;
    float v1, v2;
    boolean add, sub, mul, div;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);

        ET_Result = findViewById(R.id.ET_Result);

        b0 = findViewById(R.id.btn_zero);
        b1 = findViewById(R.id.btn_one);
        b2 = findViewById(R.id.btn_two);
        b3 = findViewById(R.id.btn_three);
        b4 = findViewById(R.id.btn_four);
        b5 = findViewById(R.id.btn_five);
        b6 = findViewById(R.id.btn_six);
        b7 = findViewById(R.id.btn_seven);
        b8 = findViewById(R.id.btn_eight);
        b9 = findViewById(R.id.btn_nine);

        bplus  = findViewById(R.id.btn_plus);
        bminus = findViewById(R.id.btn_minus);
        bmul   = findViewById(R.id.btn_mul);
        bdiv   = findViewById(R.id.btn_div);
        beql   = findViewById(R.id.btn_eql);
        bclr   = findViewById(R.id.btn_clear);

        // Number Buttons
        b0.setOnClickListener(v -> ET_Result.append("0"));
        b1.setOnClickListener(v -> ET_Result.append("1"));
        b2.setOnClickListener(v -> ET_Result.append("2"));
        b3.setOnClickListener(v -> ET_Result.append("3"));
        b4.setOnClickListener(v -> ET_Result.append("4"));
        b5.setOnClickListener(v -> ET_Result.append("5"));
        b6.setOnClickListener(v -> ET_Result.append("6"));
        b7.setOnClickListener(v -> ET_Result.append("7"));
        b8.setOnClickListener(v -> ET_Result.append("8"));
        b9.setOnClickListener(v -> ET_Result.append("9"));

        // Operators
        bplus.setOnClickListener(v -> storeValue("+"));
        bminus.setOnClickListener(v -> storeValue("-"));
        bmul.setOnClickListener(v -> storeValue("*"));
        bdiv.setOnClickListener(v -> storeValue("/"));

        // Equals
        beql.setOnClickListener(v -> calculate());

        // Clear
        bclr.setOnClickListener(v -> {
            ET_Result.setText("");
            v1 = v2 = 0;
            add = sub = mul = div = false;
        });
    }

    void storeValue(String op) {
        if (!ET_Result.getText().toString().equals("")) {
            v1 = Float.parseFloat(ET_Result.getText().toString());
            ET_Result.setText("");

            add = op.equals("+");
            sub = op.equals("-");
            mul = op.equals("*");
            div = op.equals("/");
        }
    }

    void calculate() {
        if (!ET_Result.getText().toString().equals("")) {
            v2 = Float.parseFloat(ET_Result.getText().toString());
            float ans = 0;

            if (add) ans = v1 + v2;
            else if (sub) ans = v1 - v2;
            else if (mul) ans = v1 * v2;
            else if (div) {
                if (v2 == 0) {
                    ET_Result.setText("Err");
                    return;
                }
                ans = v1 / v2;
            }

            ET_Result.setText(String.valueOf(ans));
            add = sub = mul = div = false;
        }
    }
}




