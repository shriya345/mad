package com.example.calcer;

import androidx.appcompat.app.AppCompatActivity;
import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.TextView;

public class MainActivity extends AppCompatActivity {

    private TextView tv_result;
    private double num1 = 0, num2 = 0;
    private String operator = "";
    private boolean newNumber = true;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);

        tv_result = findViewById(R.id.tv_result);

        setNumberClick(R.id.btn0, "0");
        setNumberClick(R.id.btn1, "1");
        setNumberClick(R.id.btn2, "2");
        setNumberClick(R.id.btn3, "3");
        setNumberClick(R.id.btn4, "4");
        setNumberClick(R.id.btn5, "5");
        setNumberClick(R.id.btn6, "6");
        setNumberClick(R.id.btn7, "7");
        setNumberClick(R.id.btn8, "8");
        setNumberClick(R.id.btn9, "9");

        setOperatorClick(R.id.btnAdd, "+");
        setOperatorClick(R.id.btnSub, "-");
        setOperatorClick(R.id.btnMul, "*");
        setOperatorClick(R.id.btnDiv, "/");

        findViewById(R.id.btnEqual).setOnClickListener(v -> calculate());
    }

    private void setNumberClick(int id, final String number) {
        findViewById(id).setOnClickListener(v -> {
            if (newNumber) {
                tv_result.setText(number);
                newNumber = false;
            } else {
                tv_result.append(number);
            }
        });
    }

    private void setOperatorClick(int id, final String op) {
        findViewById(id).setOnClickListener(v -> {
            num1 = Double.parseDouble(tv_result.getText().toString());
            operator = op;
            newNumber = true;
        });
    }

    private void calculate() {
        num2 = Double.parseDouble(tv_result.getText().toString());
        double result = 0;

        switch (operator) {
            case "+": result = num1 + num2; break;
            case "-": result = num1 - num2; break;
            case "*": result = num1 * num2; break;
            case "/":
                if (num2 != 0) result = num1 / num2;
                else tv_result.setText("Error");
                break;
        }

        tv_result.setText(String.valueOf(result));
        newNumber = true;
    }
}








